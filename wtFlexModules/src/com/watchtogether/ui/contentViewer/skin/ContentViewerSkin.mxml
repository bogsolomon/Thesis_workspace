<!--
	For Content Viewer
-->

<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009"
			 xmlns:s="library://ns.adobe.com/flex/spark">
	
	<!-- Host Component -->
	<fx:Metadata>[HostComponent("com.watchtogether.ui.contentViewer.ContentViewer")]</fx:Metadata>
	
	<!-- Skin States -->
	<s:states>
		<s:State name="normal" />
		<s:State name="disabled" />
	</s:states>
	
	<!-- Background Space -->
	<s:Rect top="0" bottom="0" left="0" right="0" radiusX="10">
		<s:fill>
			<s:LinearGradient rotation="90">
				<s:GradientEntry color="#000000" />
				<s:GradientEntry color="#202020" />
				<s:GradientEntry color="#000000" />
			</s:LinearGradient>
		</s:fill>
	</s:Rect>
	<!-- Content Space -->
	<s:Group id="contentGroup" top="0" bottom="0"
			  left="0" right="0" clipAndEnableScrolling="true" />
</s:SparkSkin>